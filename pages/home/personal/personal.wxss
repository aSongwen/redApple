/* pages/home/personal/personal.wxss */
.show-view {
  display: flex;
  flex-direction: column;
  height:100vh;
  background-color: rgba(240,240,240,.5);
}

.show-view-column1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 25%;
  width: 100%;
  background-color: rgba(245,71,71,1);
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:4rpx #eb3030 solid;
}

.userinfo-text {
  color: white;
  font-size: 36rpx;
}

.show-view-column2 {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(249,78,78,1);
  height: 10%;
  width: 100%;
}

.show-view-column2-row {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100%;
}

.show-view-column2-row-text1 {
  color: #ffcccc;
  font-size: 32rpx;
}

.show-view-column2-row-text2 {
  color: #ffffff;
  font-size: 36rpx;
}

.show-view-column3 {
  /* height: 480rpx; */
  width: 100%;
  background-color:rgba(255,255,255,.4);
}

.show-view-column3-block {
  height:120rpx;
  width:100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.show-view-column3-row {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 95%;
  height: 100%;
  border-bottom: #cdcdcd 0.5rpx solid;
}

.show-view-column3-row2 {
  display: flex;
  /* justify-content: center; */
  align-content: center;
  width: 95%;
  height: 100%;
}

.open-button {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 95%;
  height: 100%;
  background-color: transparent;
  padding-left: 0px !important;
  padding-right:0;
  position:static;
}

.show-view-column3-rowleft {
  display: flex;
  align-items: center;
  width: 10%;
  height: 100%;
}

.chat button{
  border:none;
  height:120rpx;
  background:none;
  border-radius:0;
  line-height:120rpx;
  color:#333;
  font-size:36rpx;
  text-align:center;
  }
	.chat button:after{
    border:none;
  }
  .chat{
    margin-left:-14px;
  }
.show-view-column3-rowcenter {
  display: flex;
  align-items: center;
  width: 70%;
  height: 100%;
}

.show-view-column3-rowright1 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 10%;
  height: 100%;
}

.show-view-column3-rowright1-text {
  background-color: #f54747;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  color: #ffffff;
  line-height: 45rpx;
  text-align: center;
  font-size: 24rpx;
}

.show-view-column3-rowright2 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 10%;
  height: 100%;
}
.userinfo-text2{
  color: #ff8888;
}