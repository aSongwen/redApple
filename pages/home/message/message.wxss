}
.msg-box-view2{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: auto;
}
.msg-box-view3{
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #F4F4F4;
}
.msg-box-view1-view1{
  display: flex;
  height: 100%;
  width: 50%;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.msg-box-view1-view2{
  display: flex;
  height: 100%;
  width: 45%;
  font-size: 28rpx;
