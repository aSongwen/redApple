/* pages/home/taking/taking.wxss */
.show-view {
  display: flex;
  flex-direction: column;
  background-color: rgba(240,240,240,.3);
}

.show-view-row {
  display: flex;
  justify-content: center;
  background-color:rgba(255,255,255,.6);
  height: 120rpx;
  width: 100%;
}

.show-view-leftRow {
  display: flex;
  align-items: center;
  width: 45%;
  border-bottom: 2rpx solid #cdcdcd;
}

.show-view-leftRow-text {
  font-size: 42rpx;
  color: #333333;
}

.show-view-rightRow {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  width: 45%;
  border-bottom: 2rpx solid #cdcdcd;
}

.show-view-rightRow-text {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #999999;
  text-align: center;
  line-height: 50rpx;
  color: #ffffff;
}

.show-view-row2 {
  display: flex;
  justify-content: center;
  background-color:rgba(255,255,255,.6);
  height: 160rpx;
  width: 100%;
}

.show-view-row2-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 33%;
}

.show-view-row2-btn-text1 {
  height: 70rpx;
  width: 200rpx;
  border: 2rpx #f54747 solid;
  border-radius: 40rpx;
  text-align: center;
  line-height: 70rpx;
  color: #f54747;
}

.show-view-row2-btn-text2 {
  height: 70rpx;
  width: 200rpx;
  border: 2rpx #cdcdcd solid;
  border-radius: 40rpx;
  text-align: center;
  line-height: 70rpx;
  color: #999999;
}

.show-view-row3 {
  display: flex;
  justify-content: center;
  background-color:rgba(255,255,255,.6);
  height: 240rpx;
  width: 100%;
}

.show-view-row3-column {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 220rpx;
}

.show-view-row3-column-row1 {
  display: flex;
  height: 80rpx;
  align-content: center;
  width: 100%;
}

.show-view-row3-column-row1-text {
  line-height: 80rpx;
  color: #999999;
}

.show-view-row3-column-row2 {
  display: flex;
  height: 140rpx;
  align-items: center;
  width: 90%;
}

.show-view-row3-column-row2-input {
  border: 2rpx #cdcdcd solid;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  width: 250rpx;
}

.show-view-row3-column-row2-text {
  font-size: 60rpx;
  color: #999999;
}

.show-view-row3-column-row2-view {
  width: 45%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.show-view-row4 {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 100%;
  height: 100rpx;
}

.show-view-row4-btn {
  height: 90rpx;
  width: 560rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 40rpx;
  background-color: #f54747;
  color: #ffffff;
}