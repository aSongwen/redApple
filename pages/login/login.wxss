}

.userinfo-nickname {
  color: #999999;
  font-size: 30rpx;
  padding-bottom: 30rpx;
  padding-top: 10rpx;
  width: 100%;
  text-align: center;
}

.userinfo-text {
  padding-bottom: 50rpx;
  width: 100%;
  text-align: center;
  color: #333333;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo2 {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.userinfo-input {
  border: 2rpx solid #cdcdcd;
  border-radius: 10rpx;
  height: 100rpx;
  width: 560rpx;
  display: flex;
  line-height: 100rpx;
}

.userinfo-input-text {
  border-right: 2rpx solid #cdcdcd;
  width: 20%;
  text-align: center;
  color: #333333;
}

.userinfo-input-input {
  height: 100rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  width: 80%;
  display: flex;
}
.userinfo-input-input2 {
  height: 100rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  width: 60%;
  display: flex;
}

.userinfo-input-btn {
  background-color: #f54747;
  color: white;
  width: 60%;
  font-size: 30rpx;
  line-height: 100rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
}

.userinfo-input-btnshow {
  background-color: #f54747;
  color: white;
  width: 50%;
  font-size: 30rpx;
  line-height: 100rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  display: block;
}

.userinfo-input-btnhide {
  background-color: #f54747;
  color: white;
  width: 50%;
  font-size: 30rpx;
  line-height: 100rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  display: none;
}

.submit-btn {
  background-color: #f54747;
  color: white;
  width: 560rpx;
  height: 90rpx;
  font-size: 40rpx;
  line-height: 90rpx;
}

.userinfo-btn {
  background-color: #f54747;
  color: white;
}

.headers {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 120rpx;
}

.headers-box {
  width: 90%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom{
  width: 560rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  color: #47a5f5;
  font-size: 30rpx;
}
.bottom-row1{
  display: flex;
  width: 50%;
  height: 100%;
  align-items: center;
}
.bottom-row2{
  display: flex;
  flex-direction: row-reverse;
  width: 50%;
  height: 100%;
  align-items: center;
}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 500rpx;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 125rpx;
  border-radius: 36rpx;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
 color:#666;
  font-size: 28rpx;
  margin-bottom: 50rpx;
  line-height: 55rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 34rpx;
  line-height: 86rpx;
}
.modal-footer button::after{
  border: none;
}
.dialogImg{
  display: flex;
  justify-content: center;
}
.dialogImg image{
  width:280rpx;
  height:200rpx;
  margin-bottom: 60rpx;
}
.btn-cancel {
  width: 50%;
  color: #e35441;
  text-align: center;
  font-size: 28rpx;
}

.btn-confirm {
  width: 50%;
  color: #fff;
  height:66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 28rpx;
  background: #ff7e77;
  border-bottom: 6rpx solid #e3544c;
  border-radius: 30rpx;
}
.dialogClose{
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: -100rpx;
  width:380rpx;
  z-index: 9001;
}
.dialogClose image{
  width:50rpx;
  height:50rpx;
  z-index: 9001;
}