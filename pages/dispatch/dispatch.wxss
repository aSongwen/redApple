.show-view {
  background-color: rgba(240,240,240,.7);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.show-view-row1 {
  background-color:rgba(255,255,255,.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 270rpx;
  width: 100%;
}

.show-view-row1-text {
  color: #333333;
  font-size: 36rpx;
}

.show-view-row2 {
  display: flex;
  height: 160rpx;
  width: 100%;
}

.show-view-row2-row {
  background-color:rgba(255,255,255,.7);
  display: flex;
  border-bottom: 0.5rpx solid #cdcdcd;
  width: 97%;
}

.show-view-row2-row2 {
  background-color:rgba(255,255,255,.7);
  display: flex;
  width: 97%;
}

.show-view-row3 {
  background-color:rgba(255,255,255,.7);
  display: flex;
  height: 160rpx;
  width: 100%;
}

.show-view-li {
  width: 15%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.show-view-text {
  width: 24%;
  height: 160rpx;
  display: flex;
  align-items: center;
}

.show-view-text-text {
  color: #333333;
  font-size: 36rpx;
}

.show-view-money {
  width: 60%;
  height: 160rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.show-view-money-text2 {
  font-size: 30.5rpx;
  color: #333333;
}

.show-view-money-text {
  color: #f59d47;
  font-size: 40rpx;
  font-weight: bold;
}

.show-view-handle {
  background-color: #f54747;
  width: 80%;
  color: #ffffff;
}

.show-view-cancel {
  width: 80%;
  color: #5d5d5d;
  border: 0.5rpx #cdcdcd solid;
}
/*
  遮罩层样式
*/
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
/*
  弹窗样式
*/
.modal-dialog {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 10%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.modal-title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.modal-input {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  /* line-height: 200rpx; */
  text-align: center;
}

.modal-input-text {
  color: #5d5d5d;
  font-size: 30.5rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-top: 0.5rpx solid #dedede;
  font-size: 36rpx;
  line-height: 100rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
  border-right: 0.5rpx solid #dedede;
}
